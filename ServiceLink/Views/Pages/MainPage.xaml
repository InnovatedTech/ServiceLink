<Page x:Class="ServiceLink.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d"
      Background="#E5E7EB"
      d:DesignHeight="650"
      d:DesignWidth="875">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== Top Summary Cards ===== -->
        <UniformGrid Grid.Row="0"
                     Grid.Column="0"
                     Columns="3"
                     Margin="0,0,16,16">

            <Border Style="{StaticResource CardStyle}"
                    Background="White"
                    Padding="16"
                    Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="Online Gateways" FontWeight="SemiBold"/>
                    <TextBlock Text="0" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}"
                    Background="White"
                    Padding="16"
                    Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="Online Team Members" FontWeight="SemiBold"/>
                    <TextBlock Text="1" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}"
                    Background="White"
                    Padding="16"
                    Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="Alerts" FontWeight="SemiBold"/>
                    <TextBlock Text="0" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- ===== Main Content Card ===== -->
        <Border Grid.Row="1"
                Grid.Column="0"
                Background="White"
                Padding="16"
                Margin="0,0,16,0"
                Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Data Usage"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBlock Text="No gateways found"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,40,0,0"/>
            </StackPanel>
        </Border>

        <!-- ===== Right Sidebar ===== -->
        <Border Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1"
                Background="White"
                Padding="16"
                Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Recent Activity"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="User logged in"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="2 hours ago"
                               Foreground="Gray"
                               FontSize="12"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Password updated"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="2 hours ago"
                               Foreground="Gray"
                               FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</Page>
